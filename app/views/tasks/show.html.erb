<p style="color: green"><%= notice %></p>
<p>
  <strong>Title:</strong>
  <%= @task.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @task.description %>
</p>

<p>
  <strong>Due date:</strong>
  <%= @task.due_date %>
</p>

<p>
  <strong>Priority:</strong>
  <%= @task.priority %>
</p>

<p>
  <strong>User:</strong>
  <%= @task.user.name %>
</p>

<p>
  <strong>Completed:</strong>
  <%= @task.is_completed.to_s.capitalize %>
</p>

<div>
  <% if current_user %>
    <%= link_to "Edit this task", edit_task_path(@task) %> |
      <%else %>
  <%= link_to "Back to tasks", tasks_path %>
  <% end %>

  <%= button_to "Destroy this task", @task, method: :delete %>

  <%= button_to "Mark Completed", mark_completed_task_path, method: :patch %>
</div>
